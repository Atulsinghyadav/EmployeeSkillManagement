@model IEnumerable<ViewSkill>

@{
    ViewData["Title"] = "EmployeeSkill Page";
}

<div class="container mt-4">
    <h2 class="text-primary">Employee Skills</h2>

    <table class="table table-bordered table-striped mt-3" style="max-width: 700px;">
        <thead>
            <tr>
                <th>Skill</th>
                <th>Rating</th>
                <th>Experience</th>
                <th>Actions</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var employeeSkill in Model)
            {
                <tr>
                    <td>@employeeSkill.name</td>
                    <td>@employeeSkill.level</td>
                    <td>@employeeSkill.experience</td>
                    <td>
                        <a asp-controller="EmployeeSkill" asp-action="Delete" asp-route-id="@employeeSkill.empSkillId" class="btn btn-danger">Remove</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="mt-3">
        <a asp-controller="Employee" asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>
