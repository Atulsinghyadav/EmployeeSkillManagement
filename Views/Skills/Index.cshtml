@model List<Skills>

<partial name="_Notification" />

<div class="container mt-4">
    <div class="row">
        <div class="col-6">
            <h2 class="text-primary">Skill List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Skills" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle-fill"></i> Add New Skill
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped mt-3">
        <thead>
            <tr class="text-center">
                <th>Id</th>
                <th>Skill Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach(var obj in Model){
                <tr class="text-center">
                    <td>@obj.Id</td>
                    <td>@obj.SkillName</td>
                    <td>
                        <div class="btn-group w-100 text-center" role="group">
                            <a asp-controller="Skills" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">Edit</a>
                            <a asp-controller="Skills" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">Delete</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
